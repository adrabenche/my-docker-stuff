pipeline {
    agent any

    stages {
        stage('Clonar repositorio') {
            steps {
                git 'https://github.com/adrabenche/my-docker-stuff.git'
            }
        }

        stage('Construir imagen Docker') {
            steps {
                script {
                    def dockerImage = docker.build('python:latest', '-f Jenkins_file/Dockerfile')
                    dockerImage.push()
                }
            }
        }

        stage('Ejecutar contenedor') {
            steps {
                script {
                    def myContainer = docker.image('test:latest').run('--name test-container -d')
                }
            }
        }
    }
}

