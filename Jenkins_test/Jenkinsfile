pipeline {
    agent any

    stages {
        stage('Construir imagen Docker') {
            steps {
                script {
                    def dockerImage = docker.build('test:latest', 'Jenkins_file')
                    dockerImage.push()
                }
            }
        }

        stage('Ejecutar contenedor') {
            steps {
                script {
                    def myContainer = docker.image('test:latest').run('--name test-container --privileged --hostname test-container-d')
                }
            }
        }
    }
}

